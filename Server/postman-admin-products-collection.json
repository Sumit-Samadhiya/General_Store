{
  "info": {
    "name": "Admin Product Management API",
    "description": "Complete collection for testing admin product management endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Admin User\",\n  \"email\": \"admin@example.com\",\n  \"password\": \"Admin@123456\",\n  \"phone\": \"+1234567890\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "auth",
                "register"
              ]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"Admin@123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "auth",
                "login"
              ]
            }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refresh_token}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/refresh-token",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "auth",
                "refresh-token"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Products - CRUD",
      "item": [
        {
          "name": "Create Product",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"High Performance Laptop\",\n  \"description\": \"15-inch display, Intel i7, 16GB RAM, 512GB SSD\",\n  \"category\": \"electronics\",\n  \"price\": 75000,\n  \"discountedPrice\": 69000,\n  \"stock\": 50,\n  \"shopId\": \"{{shop_id}}\",\n  \"images\": [\n    \"https://example.com/laptop1.jpg\"\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/products",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "admin",
                "products"
              ]
            }
          }
        },
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/admin/products?page=1&limit=20&sortBy=createdAt&sortOrder=-1",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "admin",
                "products"
              ],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "sortBy",
                  "value": "createdAt"
                },
                {
                  "key": "sortOrder",
                  "value": "-1"
                },
                {
                  "key": "search",
                  "value": "",
                  "disabled": true
                },
                {
                  "key": "category",
                  "value": "",
                  "disabled": true
                },
                {
                  "key": "minPrice",
                  "value": "",
                  "disabled": true
                },
                {
                  "key": "maxPrice",
                  "value": "",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Search Products",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/admin/products?search=laptop&page=1&limit=20",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "admin",
                "products"
              ],
              "query": [
                {
                  "key": "search",
                  "value": "laptop"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Filter by Category & Price",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/admin/products?category=electronics&minPrice=50000&maxPrice=100000&sortBy=price&sortOrder=1",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "admin",
                "products"
              ],
              "query": [
                {
                  "key": "category",
                  "value": "electronics"
                },
                {
                  "key": "minPrice",
                  "value": "50000"
                },
                {
                  "key": "maxPrice",
                  "value": "100000"
                },
                {
                  "key": "sortBy",
                  "value": "price"
                },
                {
                  "key": "sortOrder",
                  "value": "1"
                },
                {
                  "key": "page",
                  "value": "1",
                  "disabled": true
                },
                {
                  "key": "limit",
                  "value": "20",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Get Single Product",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/admin/products/{{product_id}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "admin",
                "products",
                "{{product_id}}"
              ]
            }
          }
        },
        {
          "name": "Update Product",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Laptop Name\",\n  \"description\": \"Updated description with new specs\",\n  \"price\": 72000,\n  \"discountedPrice\": 68000,\n  \"stock\": 45,\n  \"category\": \"electronics\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/products/{{product_id}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "admin",
                "products",
                "{{product_id}}"
              ]
            }
          }
        },
        {
          "name": "Delete Product (Soft)",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/admin/products/{{product_id}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "admin",
                "products",
                "{{product_id}}"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Products - Stock Management",
      "item": [
        {
          "name": "Update Stock",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"stock\": 100\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/products/{{product_id}}/stock",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "admin",
                "products",
                "{{product_id}}",
                "stock"
              ]
            }
          }
        },
        {
          "name": "Bulk Update Products",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"productIds\": [\n    \"{{product_id_1}}\",\n    \"{{product_id_2}}\"\n  ],\n  \"updates\": {\n    \"discountedPrice\": 65000,\n    \"category\": \"electronics\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/products/bulk/update",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "admin",
                "products",
                "bulk",
                "update"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Products - Analytics",
      "item": [
        {
          "name": "Get Product Statistics",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/admin/products/stats/overview",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "admin",
                "products",
                "stats",
                "overview"
              ]
            }
          }
        }
      ]
    }
  ],
