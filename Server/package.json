{
  "name": "general-store-backend",
  "version": "1.0.0",
  "description": "General Store backend API built with Express.js",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "build": "docker build -t general-store-api:latest .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f api",
    "deploy:dev": "bash scripts/deploy.sh development",
    "deploy:staging": "bash scripts/deploy.sh staging",
    "deploy:production": "bash scripts/deploy.sh production",
    "backup:create": "bash scripts/backup.sh backup",
    "backup:restore": "bash scripts/backup.sh restore",
    "backup:list": "bash scripts/backup.sh list",
    "health:check": "curl -f http://localhost:5000/health",
    "pm2:start": "pm2 start src/server.js --name general-store-api",
    "pm2:stop": "pm2 stop general-store-api",
    "pm2:logs": "pm2 logs general-store-api"
  },
  "keywords": [
    "express",
    "nodejs",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "dotenv": "^16.0.3",
    "cors": "^2.8.5",
    "mongoose": "^7.0.0",
    "joi": "^17.9.2",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "multer": "^1.4.5",
    "aws-sdk": "^2.1.0",
    "cloudinary": "^1.33.0",
    "image-size": "^1.0.2",
    "winston": "^3.8.2",
    "morgan": "^1.10.0",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.7.0",
    "express-mongo-sanitize": "^2.2.0",
    "xss-clean": "^0.1.1",
    "isomorphic-dompurify": "^1.8.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^2.0.20",
    "jest": "^29.5.0",
    "pm2": "^5.3.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
