# Development Environment Configuration
# Copy this file to .env for development

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
PORT=5000
NODE_ENV=development
API_VERSION=v1
API_BASE_URL=http://localhost:5000/api/v1
DEBUG=*

# ============================================================================
# DATABASE
# ============================================================================
MONGODB_URI=mongodb://localhost:27017/general_store
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/general_store

# ============================================================================
# AUTHENTICATION (JWT)
# ============================================================================
# Generate secure random strings for development:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=dev_secret_key_32_chars_long_12345
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=dev_refresh_secret_32_chars_long
JWT_REFRESH_EXPIRE=30d

# ============================================================================
# CORS & FRONTEND
# ============================================================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400
FRONTEND_URL=http://localhost:3000

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=debug

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000       # 15 minutes
RATE_LIMIT_MAX_REQUESTS=1000      # More lenient in dev
RATE_LIMIT_AUTH_MAX=50            # More lenient in dev
RATE_LIMIT_UPLOAD_MAX=100
RATE_LIMIT_SEARCH_MAX=100

# Content Security Policy
CSP_ENABLED=true
CSP_REPORT_URI=http://localhost:5000/csp-report

# HTTPS/Security Headers
ENFORCE_HTTPS=false               # Not enforced in dev
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=false                # Leave false in dev

# File Upload Security
MAX_FILE_SIZE=5242880             # 5MB
MAX_FILES_PER_UPLOAD=5
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,pdf,doc,docx,txt
UPLOAD_SCAN_MALWARE=false         # Disabled in dev

# ============================================================================
# FILE STORAGE
# ============================================================================
# Options: local, s3, cloudinary
STORAGE_TYPE=local

# AWS S3 Configuration (if STORAGE_TYPE=s3)
# AWS_ACCESS_KEY_ID=your_dev_access_key
# AWS_SECRET_ACCESS_KEY=your_dev_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=dev-bucket-name

# Cloudinary Configuration (if STORAGE_TYPE=cloudinary)
# CLOUDINARY_CLOUD_NAME=your_dev_cloud_name
# CLOUDINARY_API_KEY=your_dev_api_key
# CLOUDINARY_API_SECRET=your_dev_api_secret

# ============================================================================
# EMAIL CONFIGURATION (for password reset)
# ============================================================================
EMAIL_SERVICE=gmail
# EMAIL_USER=your_dev_email@gmail.com
# EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@dev.generalstore.local

# ============================================================================
# THIRD-PARTY INTEGRATIONS
# ============================================================================
# Add any development-specific API keys here
